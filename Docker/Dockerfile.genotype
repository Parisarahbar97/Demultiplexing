# Minimal bcftools image WITH plugins
FROM quay.io/biocontainers/bcftools:1.21--h8b25389_0

# Tell bcftools where plugins live (bioconda path)
ENV BCFTOOLS_PLUGINS=/opt/conda/libexec/bcftools

# Your prep script
COPY scripts/prep_healthy_vcfs.sh /usr/local/bin/prep_healthy_vcfs.sh
RUN chmod +x /usr/local/bin/prep_healthy_vcfs.sh

WORKDIR /work
ENTRYPOINT ["/usr/local/bin/prep_healthy_vcfs.sh"]

# bcftools + samtools image
FROM quay.io/biocontainers/bcftools:1.21--h8b25389_0

# Install samtools (via conda in this image)
RUN conda install -y -c conda-forge -c bioconda samtools=1.19.2 && conda clean -afy

# bcftools plugins live here in this image
ENV BCFTOOLS_PLUGINS=/usr/local/libexec/bcftools

# (optional) keep your prep script if you want
COPY scripts/prep_healthy_vcfs.sh /usr/local/bin/prep_healthy_vcfs.sh
RUN chmod +x /usr/local/bin/prep_healthy_vcfs.sh

WORKDIR /work

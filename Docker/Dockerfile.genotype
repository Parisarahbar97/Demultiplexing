# bcftools + samtools + tabix already included
FROM staphb/bcftools:1.21

# bcftools plugins are here in this image
ENV BCFTOOLS_PLUGINS=/usr/local/libexec/bcftools

# your harmonization helper
COPY scripts/harmonize_vcf_bam.sh /usr/local/bin/harmonize_vcf_bam.sh
RUN chmod +x /usr/local/bin/harmonize_vcf_bam.sh

WORKDIR /work

# docker/Dockerfile.genotype
FROM biocontainers/bcftools:v1.21-1-deb_cv1

USER root
RUN apt-get update && apt-get install -y --no-install-recommends \
    bash coreutils findutils grep sed awk gzip pigz parallel procps \
 && apt-get clean && rm -rf /var/lib/apt/lists/*

# Add our one-click VCF prep script
COPY scripts/prep_healthy_vcfs.sh /usr/local/bin/prep_healthy_vcfs.sh
RUN chmod +x /usr/local/bin/prep_healthy_vcfs.sh

WORKDIR /work
ENTRYPOINT ["/usr/local/bin/prep_healthy_vcfs.sh"]
